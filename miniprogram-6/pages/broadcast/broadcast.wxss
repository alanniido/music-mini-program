.container {
    display: flex;
    flex-direction: column;
    padding: 15px;
    background-color: #f5f5f5;
    /* 浅灰色背景 */
}

.intro {
    font-size: 16px;
    font-weight: bold;
    color: #321f49ad;
    /* 深灰色标题 */
    margin-bottom: 15px;
}

.highlighted-section {
    display: flex;
    background-color: #ffffff;
    /* 白色背景 */
    border-radius: 15px;
    overflow: hidden;
    align-items: center;
    padding: 15px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    /* 轻微阴影效果 */
    margin-bottom: 15px;
}

.cover {
    width: 50px;
    height: 50px;
    margin-right: 10px;
    /* 右侧距离 */
    border-radius: 5px;
}

.info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    /* 垂直排列 */
}

.title {
    font-size: 15px;
    color: #333333ec;
    /* 深灰色标题 */
    margin-right: 50px;
}

.sub-info {
    font-size: 12px;
    color: #777;
    /* 中灰色 */
}

.play-icon {
    width: 30px;
    height: 30px;
}